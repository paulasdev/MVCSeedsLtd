@model IEnumerable<MVCSeedsLtd.Models.Seeds>

@{
    ViewData["Title"] = "DisplayList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayList</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Category)</th>
        <th>@Html.DisplayNameFor(model => model.SeedName)</th>
        <th>@Html.DisplayNameFor(model => model.Variaty)</th>
        <th>@Html.DisplayNameFor(model => model.Properties)</th>
        <th>@Html.DisplayNameFor(model => model.Description)</th>
        <th>@Html.DisplayNameFor(model => model.No_In_Stock)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model) 
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Category)</td>
            <td>@Html.DisplayFor(modelItem => item.SeedName)</td>
            <td>@Html.DisplayFor(modelItem => item.Variaty)</td>
            <td>@Html.DisplayFor(modelItem => item.Properties)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.No_In_Stock)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>